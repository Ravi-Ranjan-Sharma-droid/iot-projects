menu "ESP32 Smart Car Configuration"

    config ESP_WIFI_SSID
        string "WiFi SSID"
        default "ESP32_SmartCar"
        help
            SSID (network name) for the smart car to create as an access point.

    config ESP_WIFI_PASSWORD
        string "WiFi Password"
        default "smartcar123"
        help
            WiFi password for the smart car access point.
            Must be at least 8 characters long.

    config ESP_WIFI_CHANNEL
        int "WiFi Channel"
        range 1 13
        default 1
        help
            WiFi channel (1-13) for the smart car access point.

    config ESP_MAX_STA_CONN
        int "Maximum STA connections"
        default 4
        range 1 10
        help
            Maximum number of stations allowed to connect to the smart car AP.

    config WEB_SERVER_PORT
        int "Web Server Port"
        default 80
        range 1 65535
        help
            Port for the web server.

    config WEBSOCKET_PORT
        int "WebSocket Server Port"
        default 81
        range 1 65535
        help
            Port for the WebSocket server.

    config MOTOR_PWM_FREQUENCY
        int "Motor PWM Frequency (Hz)"
        default 1000
        range 100 20000
        help
            PWM frequency for motor control.

    config MOTOR_PWM_RESOLUTION
        int "Motor PWM Resolution (bits)"
        default 8
        range 1 16
        help
            PWM resolution for motor control (8 bits = 256 levels).

    config BATTERY_LOW_THRESHOLD
        int "Low Battery Threshold (mV)"
        default 6600
        range 6000 7500
        help
            Voltage threshold for low battery warning (in millivolts).

    config BATTERY_CRITICAL_THRESHOLD
        int "Critical Battery Threshold (mV)"
        default 6000
        range 5500 7000
        help
            Voltage threshold for critical battery shutdown (in millivolts).

    config FAILSAFE_TIMEOUT_MS
        int "Communication Timeout (ms)"
        default 1000
        range 500 10000
        help
            Time without commands before failsafe activates (in milliseconds).

endmenu